			"SignerID": "43361affedeb75affee9baec7e054a5e14883213e5a121b67d74a0e12e9d2b7a"
		},
		"bookstore": {
			"Debug": true,
			"SecurityVersion": 1,
			"ProductID": 10,
			"SignerID": "43361affedeb75affee9baec7e054a5e14883213e5a121b67d74a0e12e9d2b7a"
		},
		"bookwarehouse": {
			"Debug": true,
			"SecurityVersion": 1,
			"ProductID": 11,
			"SignerID": "43361affedeb75affee9baec7e054a5e14883213e5a121b67d74a0e12e9d2b7a"
		},
		"edgelessdb": {
			"SecurityVersion": 1,
			"ProductID": 16,
			"SignerID": "67d7b00741440d29922a15a9ead427b6faf1d610238ae9826da345cea4fee0fe"
		}
	},
	"Marbles": {
		"edgelessdb": {
			"Package": "edgelessdb",
			"Parameters": {
				"Env": {
					"EROCKSDB_MASTERKEY": "{{ hex .Secrets.edbMasterKey.Private }}",
					"EDB_ROOT_CERT": "{{ pem .Secrets.edbRootCert.Cert }}",
					"EDB_ROOT_KEY": "{{ pem .Secrets.edbRootCert.Private }}",
					"EDG_EDB_MANIFEST_FILE": "/data/manifest.json"
				},
				"Argv": [
					"./edb",
					"-marble"
				],
				"Files": {
					"/data/manifest.json": {
						"Encoding": "base64",
						"NoTemplates": false,
						"Data": ""
					}
				}
			}
		},
		"bookbuyer": {
			"Package": "bookbuyer",
			"Parameters": {
				"Argv": [
					"/bookbuyer",
					"--port",
					"14001"
				],
				"Env": {
					"BOOKSTORE_NAMESPACE": "bookstore",
					"BOOKSTORE_SVC": "bookstore",
					"WEB_CERT": "{{ pem .Secrets.webpageCert.Cert }}",
					"WEB_KEY": "{{ pem .Secrets.webpageCert.Private }}"
				}
			}
		},
		"bookthief": {
			"Package": "bookthief",
			"Parameters": {
				"Argv": [
					"/bookthief",
					"--port",
					"14001"
				],
				"Env": {
					"BOOKSTORE_NAMESPACE": "bookstore",
					"BOOKSTORE_SVC": "bookstore",
					"BOOKTHIEF_EXPECTED_RESPONSE_CODE": "503",
					"WEB_CERT": "{{ pem .Secrets.webpageCert.Cert }}",
					"WEB_KEY": "{{ pem .Secrets.webpageCert.Private }}"
				}
			}
		},
		"bookstore": {
			"Package": "bookstore",
			"Parameters": {
				"Argv": [
					"/bookstore",
					"--port",
					"14001"
				],
				"Env": {
					"BOOKWAREHOUSE_NAMESPACE": "bookwarehouse",
					"IDENTITY": "bookstore-v1",
					"WEB_CERT": "{{ pem .Secrets.webpageCert.Cert }}",
					"WEB_KEY": "{{ pem .Secrets.webpageCert.Private }}"
				}
			}
		},
		"bookstore-v2": {
			"Package": "bookstore",
			"Parameters": {
				"Argv": [
					"/bookstore",
					"--port",
					"14001"
				],
				"Env": {
					"BOOKWAREHOUSE_NAMESPACE": "bookwarehouse",
					"IDENTITY": "bookstore-v2",
					"WEB_CERT": "{{ pem .Secrets.webpageCert.Cert }}",
					"WEB_KEY": "{{ pem .Secrets.webpageCert.Private }}"
				}
			}
		},
		"bookwarehouse": {
			"Package": "bookwarehouse",
			"Parameters": {
				"Argv": [
					"/bookwarehouse",
					"--port",
					"14001"
				],
				"Env": {
					"WEB_CERT": "{{ pem .Secrets.webpageCert.Cert }}",
					"WEB_KEY": "{{ pem .Secrets.webpageCert.Private }}",
					"SQL_CERT": "{{ pem .Secrets.sqlCert.Cert }}",
					"SQL_KEY": "{{ pem .Secrets.sqlCert.Private }}"
				}
			}
		}
	},
	"Secrets": {
		"webpageCert": {
			"Type": "cert-ecdsa",
			"Size": 256,
			"Shared": false
		},
		"sqlCert": {
			"Type": "cert-ecdsa",
			"Size": 256,
			"Shared": false,
			"Cert": {
				"Subject": {
					"CommonName": "bookwarehouse"
				}
			}
		},
		"edbMasterKey": {
			"Size": 128,
			"Shared": true,
			"Type": "symmetric-key"
		},
		"edbRootCert": {
			"Size": 256,
			"Type": "cert-ecdsa",
			"Shared": true,
			"Cert": {
				"IsCA": true,
				"Subject": {
					"Organization": [
						"My EdgelessDB root"
					]
				},
				"DNSNames": [
					"localhost",
					"edgelessdb-sql-api.edgelessdb.svc.cluster.local"
				]
			}
		}
	}
}
